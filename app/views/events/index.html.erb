<h1>Liste des events :</h1>
<div class="container">
  <div class="row  justify-content-between">
    <% @events.each do |event|%>
      <div class="card mb-5" style="width: 18rem;">
      <% if event.avatar.attached? %>
        <%=image_tag event.avatar.variant(resize:"200x200")%>
       <% else %>
        <img class="card-img-top" src="/assets/event_picture.jpg" alt="Card image cap">
      <% end %>
     

      <div class="card-body">
        <h5 class="card-title"><%=event.title%></h5>
        <p class="card-text"><%=event.description%></p>
        <a href="<%=event_path(event.id)%>" class="btn btn-primary">More</a>
      </div>
    </div>
    <% end %>
  </div>
</div>