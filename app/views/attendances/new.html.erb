<h1>Nouvelle participation</h1>
<h3> <%=@user.first_name %> veut participer à l'event <%=@event.title %> au prix de <%=@event.price %> €</h3>

<%= form_tag event_attendances_path do %>
<article>
  <% if flash[:error].present? %>
    <div id="error_explanation">
      <p><%= flash[:error] %></p>
    </div>
  <% end %>
  <label class="amount">
    <span>Amount: <%=@event.price %> €</span>
  </label>
</article>
<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-description="Achat d'un produit"
    data-amount="500"
    data-locale="auto">
</script>
<% end %>